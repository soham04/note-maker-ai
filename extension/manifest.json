{
    "manifest_version": 3,
    "name": "YouTube Note Maker",
    "version": "1.0",
    "description": "Generate AI notes for the current YouTube video.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "http://localhost:8000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}