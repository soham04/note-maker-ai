# Google Client ID and Secret for OAuth
# Create at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Redirect URI for OAuth callback (Must match Google Console)
REDIRECT_URI=http://localhost:8000/auth/google/callback

# Secret key for JWT/Cookie signing (Use a strong random string)
SECRET_KEY=your_secret_key_here

# Gemini API Key for AI generation
# Create at https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Storage Bucket Name
# Ensure the service account (or implied credentials) has read/write access
GCS_BUCKET_NAME=yt-note-maker-notes

# Optional: Path to Service Account Key JSON
# If running locally without 'gcloud auth application-default login', set this path.
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Database Configuration
# Set ENVIRONMENT to 'development' or 'production'
ENVIRONMENT=development

# Local DB (SQLite):
DATABASE_URL_LOCAL=sqlite:///./local_dev.db

# Prod DB (Cloud SQL via Connector):
DB_USER=your_db_user
DB_PASS=your_db_password
DB_NAME=your_db_name
INSTANCE_CONNECTION_NAME=project:region:instance
